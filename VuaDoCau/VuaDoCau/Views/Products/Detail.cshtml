@model VuaDoCau.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item">
                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.CategoryId">
                    @Model.Category?.Name
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-12 col-md-6">
            <div class="card p-2">
                <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? "/images/no-image.png" : Model.ImageUrl)"
                     alt="@Model.Name"
                     class="w-100"
                     style="border-radius:8px; object-fit:contain; aspect-ratio:1/1; background:#f3f4f6;" />
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card p-3">
                <h2 class="mb-2">@Model.Name</h2>
                <div class="text-muted mb-2">Danh mục: <strong>@Model.Category?.Name</strong></div>

                <div class="h4 fw-bold mb-1">@($"{Model.Price:N0} đ")</div>
                @if (Model.OldPrice.HasValue && Model.OldPrice.Value > 0 && Model.OldPrice > Model.Price)
                {
                    <div class="text-decoration-line-through text-muted mb-2">
                        @($"{Model.OldPrice.Value:N0} đ")
                    </div>
                }

                @* Hiển thị mô tả ngắn từ cột Summary *@
                @if (!string.IsNullOrWhiteSpace(Model.Summary))
                {
                    <div class="mb-3">
                        <h6 class="fw-bold mb-1">Mô tả</h6>
                        <div class="text-muted">@Model.Summary</div>
                    </div>
                }

                <div class="d-flex align-items-center gap-2">
                    <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex align-items-center gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="number" name="quantity" value="1" min="1"
                               class="form-control qty-input" style="width:110px;" />
                        <button type="submit" class="btn btn-primary">Thêm vào giỏ</button>
                    </form>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.CategoryId"
                       class="btn btn-outline-secondary">Quay lại danh mục</a>
                </div>
            </div>
        </div>
    </div>
</div>
