@model VuaDoCau.Models.Product
@{
    ViewData["Title"] = Model.Name;
}
<div class="row g-4">
    <div class="col-md-5">
        <img class="img-fluid rounded" src="@Model.ImageUrl" alt="@Model.Name" />
    </div>
    <div class="col-md-7">
        <div class="small text-muted">@Model.Category.Name</div>
        <h1 class="h3">@Model.Name</h1>
        <div class="fs-4 text-danger fw-bold mb-2">@string.Format("{0:N0} đ", Model.Price)</div>
        @if (Model.OldPrice.HasValue)
        {
            <div class="text-muted text-decoration-line-through mb-3">
                @string.Format("{0:N0} đ", Model.OldPrice)
            </div>
        }
        <p>@Model.Summary</p>

        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="input-group" style="max-width:200px;">
                <input type="number" name="qty" min="1" value="1" class="form-control" />
                <button class="btn btn-primary" type="submit">Thêm vào giỏ</button>
            </div>
        </form>
    </div>
</div>