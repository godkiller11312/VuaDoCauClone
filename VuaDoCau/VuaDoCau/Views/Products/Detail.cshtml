@model Vuadocau.Web.Models.Product
@{
	ViewData["Title"] = Model.Name;
}
<div class="row g-4">
	<div class="col-md-5">
		<img class="img-fluid rounded" src="@Model.ImageUrl" alt="@Model.Name" />
	</div>
	<div class="col-md-7">
		<div class="small text-muted">@Model.Category.Name</div>
		<h1 class="h3">@Model.Name</h1>
		<div class="fs-4 text-danger fw-bold mb-2">@string.Format("{0:N0} đ", Model.Price)</div>
		@if (Model.OldPrice.HasValue)
		{
			<div class="text-muted text-decoration-line-through mb-3">@string.Format("{0:N0} đ", Model.OldPrice)</div>
		}
		<p>@Model.Summary</p>
		<button class="btn btn-primary">Thêm vào giỏ (demo)</button>
	</div>
</div>