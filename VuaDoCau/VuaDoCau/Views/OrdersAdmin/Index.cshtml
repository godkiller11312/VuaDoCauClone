@using VuaDoCau.Models
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    string FormatVND(decimal v) => $"{v:N0} đ";
    bool IsPending(string s)
    {
        s = (s ?? "").Trim();
        return s.Equals("Pending", System.StringComparison.OrdinalIgnoreCase)
            || s.Equals("Chờ xác nhận", System.StringComparison.OrdinalIgnoreCase)
            || s.Equals("Cho xac nhan", System.StringComparison.OrdinalIgnoreCase);
    }
}

<div class="container py-4">
    <h1 class="mb-4">Quản lý đơn hàng</h1>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 80px;">Mã</th>
                    <th style="width: 200px;">Ngày</th>
                    <th>Trạng thái</th>
                    <th class="text-end" style="width: 160px;">Tạm tính</th>
                    <th class="text-end" style="width: 140px;">Phí ship</th>
                    <th class="text-end" style="width: 160px;">Tổng</th>
                    <th style="width: 220px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.OrderByDescending(o => o.CreatedAt))
                {
                    <tr>
                        <td><strong>#@order.Id</strong></td>
                        <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(order.Status ?? "")</td>
                        <td class="text-end">@FormatVND(order.Subtotal)</td>
                        <td class="text-end">@FormatVND(order.ShippingFee)</td>
                        <td class="text-end">@FormatVND(order.Total)</td>
                        <td class="text-end">
                            @if (IsPending(order.Status))
                            {
                                <form asp-action="MarkShipping" asp-controller="OrdersAdmin" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@order.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm">Xác nhận giao</button>
                                </form>
                            }
                            else if (string.Equals(order.Status, "Shipping", System.StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-info text-dark">Đang giao</span>
                            }
                            else if (string.Equals(order.Status, "Completed", System.StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-success">Hoàn tất</span>
                            }
                        </td>
                    </tr>

                    <tr class="table-borderless">
                        <td></td>
                        <td colspan="6" class="text-muted">
                            @if (order.Items != null && order.Items.Any())
                            {
                                <div>
                                    @foreach (var it in order.Items)
                                    {
                                        <div><span>@(it.Product?.Name) × @it.Quantity</span></div>
                                    }
                                </div>
                            }
                            else
                            {

                                <span>(Không có dòng hàng)</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
