@using VuaDoCau.Models
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    string FormatVND(decimal v) => $"{v:N0} đ";
    string StatusVi(string s)
    {
        return s switch
        {
            "Pending" => "Đang xử lý",
            "Processing" => "Đang xử lý",
            "Shipping" => "Đang giao hàng",
            "Completed" => "Hoàn tất",
            "Cancelled" => "Đã hủy",
            _ => s ?? ""
        };
    }
}

<div class="container py-4">
    <h1 class="mb-4">Quản lý đơn hàng</h1>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 80px;">Mã</th>
                    <th style="width: 200px;">Ngày</th>
                    <th>Trạng thái</th>
                    <th class="text-end" style="width: 160px;">Tạm tính</th>
                    <th class="text-end" style="width: 140px;">Phí ship</th>
                    <th class="text-end" style="width: 160px;">Tổng</th>
                    <th style="width: 140px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-5">
                            Chưa có đơn hàng.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var order in Model.OrderByDescending(o => o.CreatedAt))
                    {
                        <tr>
                            <td><strong>#@order.Id</strong></td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@StatusVi(order.Status ?? "")</td>
                            <td class="text-end">@FormatVND(order.Subtotal)</td>
                            <td class="text-end">@FormatVND(order.ShippingFee)</td>
                            <td class="text-end">@FormatVND(order.Total)</td>
                            <td class="text-end">
                                @if (!string.Equals(order.Status, "Completed", System.StringComparison.OrdinalIgnoreCase))
                                {
                                    <form asp-action="MarkCompleted" asp-controller="OrdersAdmin" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@order.Id" />
                                        <button type="submit" class="btn btn-primary btn-sm">Hoàn tất</button>
                                    </form>
                                }
                            </td>
                        </tr>

                        <tr class="table-borderless">
                            <td></td>
                            <td colspan="6" class="text-muted">
                                @if (order.Items != null && order.Items.Any())
                                {
                                    <div>
                                        @foreach (var it in order.Items)
                                        {
                                            <div>
                                                <span>@(it.Product?.Name) × @it.Quantity</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span>(Không có dòng hàng)</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
