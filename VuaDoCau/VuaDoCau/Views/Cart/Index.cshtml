@model VuaDoCau.Controllers.CartController.CartVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Giỏ hàng";
    var hasItems = Model?.Items != null && Model.Items.Any();
}

<div class="container py-4">
    <h1 class="h3 mb-3">Giỏ hàng</h1>

    @* Thông báo *@
    @if (TempData["CartMessage"] != null)
    {
        <div class="alert alert-success">@TempData["CartMessage"]</div>
    }
    @if (TempData["CartError"] != null)
    {
        <div class="alert alert-warning">@TempData["CartError"]</div>
    }

    @if (!hasItems)
    {
        <div class="alert alert-info">Giỏ hàng của bạn đang trống.</div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">Tiếp tục mua sắm</a>

            <!-- Cho phép bấm luôn, OrdersController sẽ tự kiểm tra rỗng -->
            <a class="btn btn-success" asp-controller="Orders" asp-action="Checkout">Đặt hàng</a>
        </div>
    }
    else
    {
        <div class="table-responsive mb-3">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th style="width:60%">Sản phẩm</th>
                        <th style="width:12%">Giá</th>
                        <th style="width:16%">Số lượng</th>
                        <th style="width:12%" class="text-end">Tạm tính</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var it in Model!.Items)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <img src="@it.ImageUrl" alt="@it.Name" width="48" height="48" class="rounded border bg-light object-fit-cover" />
                                    <div>
                                        <div class="fw-semibold">@it.Name</div>
                                        <form asp-action="Remove" method="post" class="mt-1 d-inline">
                                            <input type="hidden" name="productId" value="@it.ProductId" />
                                            <button type="submit" class="btn btn-link p-0 text-danger small">Xoá</button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </div>
                                </div>
                            </td>

                            <td>@String.Format("{0:N0} đ", it.UnitPrice)</td>

                            <td>
                                <form asp-action="Update" method="post" class="d-flex align-items-center gap-2">
                                    <input type="hidden" name="productId" value="@it.ProductId" />
                                    <input type="number" name="quantity" value="@it.Quantity" min="1" class="form-control" style="max-width:90px" />
                                    <button type="submit" class="btn btn-outline-primary btn-sm">Áp dụng</button>
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>

                            <td class="text-end fw-semibold">@String.Format("{0:N0} đ", it.Subtotal)</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Tạm tính:</th>
                        <th class="text-end">@String.Format("{0:N0} đ", Model!.Subtotal)</th>
                    </tr>
                    <tr>
                        <th colspan="3" class="text-end">Phí vận chuyển:</th>
                        <th class="text-end">@String.Format("{0:N0} đ", Model!.Shipping)</th>
                    </tr>
                    <tr>
                        <th colspan="3" class="text-end">Tổng cộng:</th>
                        <th class="text-end text-success fs-5">@String.Format("{0:N0} đ", Model!.Total)</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <form asp-action="Clear" method="post">
                <button type="submit" class="btn btn-outline-danger">Xoá toàn bộ</button>
                @Html.AntiForgeryToken()
            </form>

            <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">Tiếp tục mua sắm</a>

            <!-- Cho phép bấm luôn; server sẽ kiểm tra session -->
            <a class="btn btn-success" asp-controller="Orders" asp-action="Checkout">Đặt hàng</a>
        </div>
    }
</div>
