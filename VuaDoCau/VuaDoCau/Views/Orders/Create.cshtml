@model VuaDoCau.Controllers.OrdersController.CheckoutForm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thanh toán";

    var items = ViewBag.Items as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    decimal subtotal = (ViewBag.Subtotal is decimal d1) ? d1 : 0m;
    decimal shipping = (ViewBag.Shipping is decimal d2) ? d2 : 0m;
    decimal total = (ViewBag.Total is decimal d3) ? d3 : 0m;

    string VND(decimal v) => $"{v:N0} đ";
}

<div class="container py-4">
    <h1 class="mb-3">Xác nhận đơn hàng</h1>

    <div class="row g-4">
        <div class="col-12 col-lg-8">
            <div class="table-responsive mb-3">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th style="width:80px;"></th>
                            <th>Sản phẩm</th>
                            <th class="text-end">Giá</th>
                            <th class="text-center">SL</th>
                            <th class="text-end">Tạm tính</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var it in items)
                        {
                            <tr>
                                <td>
                                    <img src="@((string)it.ImageUrl)" alt="@((string)it.Name)"
                                         style="width:64px;height:64px;object-fit:cover;border-radius:8px;background:#f3f4f6;" />
                                </td>
                                <td class="fw-semibold">@((string)it.Name)</td>
                                <td class="text-end">@VND((decimal)it.UnitPrice)</td>
                                <td class="text-center">@((int)it.Quantity)</td>
                                <td class="text-end fw-bold">@VND((decimal)it.Subtotal)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th colspan="4" class="text-end">Tạm tính</th>
                            <th class="text-end">@VND(subtotal)</th>
                        </tr>
                        <tr>
                            <th colspan="4" class="text-end">Phí ship</th>
                            <th class="text-end">@VND(shipping)</th>
                        </tr>
                        <tr>
                            <th colspan="4" class="text-end fs-5">Tổng cộng</th>
                            <th class="text-end fs-5">@VND(total)</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card p-3">
                <h5 class="fw-bold mb-3">Thông tin nhận hàng</h5>

                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="mb-2">
                        <label asp-for="ReceiverName" class="form-label"></label>
                        <input asp-for="ReceiverName" class="form-control" placeholder="Ví dụ: Nguyễn Văn A" />
                        <span asp-validation-for="ReceiverName" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Ví dụ: 09xx xxx xxx" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="email@domain.com (tuỳ chọn)" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" rows="3" class="form-control" placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Note" class="form-label"></label>
                        <textarea asp-for="Note" rows="2" class="form-control" placeholder="Ghi chú cho shipper (tuỳ chọn)"></textarea>
                    </div>

                    <button class="btn btn-primary w-100" type="submit">Đặt hàng</button>
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Quay lại giỏ</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
