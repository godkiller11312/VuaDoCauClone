@model VuaDoCau.Controllers.CheckoutVm
@{
    ViewData["Title"] = "Thanh toán";
}

<h2>Thanh toán</h2>
<form asp-action="Checkout" method="post" class="row g-3">
    <div class="col-lg-7">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12"><label class="form-label">Họ tên</label><input asp-for="ReceiverName" class="form-control" /></div>
                    <div class="col-md-6"><label class="form-label">Số điện thoại</label><input asp-for="Phone" class="form-control" /></div>
                    <div class="col-md-6"><label class="form-label">Email</label><input asp-for="Email" class="form-control" /></div>
                    <div class="col-12"><label class="form-label">Địa chỉ nhận hàng</label><input asp-for="Address" class="form-control" /></div>
                    <div class="col-12"><label class="form-label">Ghi chú (tuỳ chọn)</label><textarea asp-for="Note" class="form-control"></textarea></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3">Đơn hàng</h5>
                @foreach (var it in Model.Items)
                {
                    <div class="d-flex justify-content-between small">
                        <span>@it.Name × @it.Quantity</span>
                        <span>@string.Format("{0:N0} đ", it.LineTotal)</span>
                    </div>
                }
                <hr />
                <div class="d-flex justify-content-between"><span>Tạm tính</span><strong>@string.Format("{0:N0} đ", Model.Subtotal)</strong></div>
                <div class="d-flex justify-content-between"><span>Vận chuyển</span><strong>@string.Format("{0:N0} đ", Model.Shipping)</strong></div>
                <div class="d-flex justify-content-between fs-5 mt-2"><span><strong>Tổng</strong></span><strong>@string.Format("{0:N0} đ", Model.Total)</strong></div>
                <button class="btn btn-success w-100 mt-3" type="submit">ĐẶT HÀNG</button>
            </div>
        </div>
    </div>
</form>