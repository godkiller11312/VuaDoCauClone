@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container min-vh-100 d-flex align-items-center py-5">
    <div class="row w-100">
        <div class="col-12 col-md-8 col-lg-5 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h3 mb-3 text-center">Đăng nhập</h1>

                    <form asp-action="Login" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input name="Email" type="email" class="form-control" placeholder="you@email.com" required />
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Mật khẩu</label>
                            <input name="Password" type="password" class="form-control" placeholder="••••••••" required />
                        </div>

                        <div class="form-check my-2">
                            <input class="form-check-input" type="checkbox" name="RememberMe" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                        </div>

                        <button class="btn btn-primary w-100 mt-2" type="submit">Đăng nhập</button>
                    </form>

                    <div class="text-center mt-3">
                        Chưa có tài khoản?
                        <a asp-controller="Account" asp-action="Register">Đăng ký</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
