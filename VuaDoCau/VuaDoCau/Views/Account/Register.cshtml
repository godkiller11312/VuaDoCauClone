@model VuaDoCau.Controllers.RegisterVm
@{
    ViewData["Title"] = "Đăng ký";
}
<div class="container min-vh-100 d-flex align-items-center py-5">
    <div class="row w-100">
        <div class="col-12 col-md-10 col-lg-7 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h3 mb-3 text-center">Tạo tài khoản</h1>

                    <!-- TÓM TẮT LỖI -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <form asp-action="Register" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label" asp-for="FullName">Họ tên</label>
                                <input class="form-control" asp-for="FullName" placeholder="Nguyễn Văn A" />
                                <span class="text-danger small" asp-validation-for="FullName"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="Phone">SĐT</label>
                                <input class="form-control" asp-for="Phone" placeholder="09xx xxx xxx" />
                                <span class="text-danger small" asp-validation-for="Phone"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="Email">Email</label>
                                <input class="form-control" asp-for="Email" type="email" placeholder="you@email.com" />
                                <span class="text-danger small" asp-validation-for="Email"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="Address">Địa chỉ</label>
                                <input class="form-control" asp-for="Address" placeholder="Số nhà, đường, phường/xã..." />
                                <span class="text-danger small" asp-validation-for="Address"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="Password">Mật khẩu</label>
                                <input class="form-control" asp-for="Password" type="password" placeholder="••••••••" />
                                <span class="text-danger small" asp-validation-for="Password"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="ConfirmPassword">Xác nhận</label>
                                <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Nhập lại mật khẩu" />
                                <span class="text-danger small" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>

                        <button class="btn btn-success w-100 mt-3" type="submit">Tạo tài khoản</button>
                    </form>

                    <div class="text-center mt-3">
                        Đã có tài khoản?
                        <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bắt buộc để client-side validation hoạt động -->
    <partial name="_ValidationScriptsPartial" />
}
