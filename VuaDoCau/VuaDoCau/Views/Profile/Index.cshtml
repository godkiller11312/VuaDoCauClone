@model IEnumerable<VuaDoCau.Models.Order>
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    var user = ViewBag.User as VuaDoCau.Models.ApplicationUser;
}

<h2 class="mb-3">Hồ sơ cá nhân</h2>
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6"><strong>Họ tên:</strong> @user?.FullName</div>
            <div class="col-md-6"><strong>Email:</strong> @user?.Email</div>
            <div class="col-md-6"><strong>SĐT:</strong> @user?.PhoneNumber</div>
            <div class="col-md-6"><strong>Địa chỉ:</strong> @user?.Address</div>
        </div>
    </div>
</div>

<h3 class="mb-3">Lịch sử đơn hàng</h3>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Ngày</th>
                <th>Trạng thái</th>
                <th class="text-end">Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>#@o.Id</td>
                    <td>@o.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@o.Status</td>
                    <td class="text-end">@o.Total.ToString("N0") đ</td>
                </tr>
                <tr class="table-light">
                    <td colspan="4">
                        @foreach (var it in o.Items)
                        {
                            <div class="d-flex justify-content-between small">
                                <span>@it.Product.Name × @it.Quantity</span>
                                <span>@(it.UnitPrice* it.Quantity).ToString("N0") đ</span>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
